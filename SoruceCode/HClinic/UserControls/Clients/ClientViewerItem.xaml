<UserControl x:Class="HClinic.UserControls.Clients.ClientViewerItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HClinic.UserControls.Clients"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" FlowDirection="RightToLeft">
    <Border Background="#fff" Cursor="Hand" Margin="5" Padding="5" BorderBrush="#ccc" BorderThickness="1" MouseLeftButtonUp="Border_MouseLeftButtonUp">
        <StackPanel Orientation="Vertical">
            <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Grid.Column="0" Name="lblId" Content="1" />
            <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Grid.Column="1" Name="lblName" Content="1" />
            <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Grid.Column="2" Name="lblPhone" Content="1" />
        </StackPanel>
    </Border>
</UserControl>
