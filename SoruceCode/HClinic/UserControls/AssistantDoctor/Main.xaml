<UserControl x:Class="HClinic.UserControls.AssistantDoctor.Main"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HClinic.UserControls.AssistantDoctor"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="700" FlowDirection="LeftToRight" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0" Background="{StaticResource foregroundBrush}">
            <StackPanel DockPanel.Dock="Top" Orientation="Vertical" Margin="5">
                <Label Style="{StaticResource DroidKufiRegular}" Foreground="{StaticResource backgroundBrush}" Content="رقم البطاقة" />
                <TextBox Name="txtCardNumber" KeyDown="txtCardNumber_KeyDown" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FlowDirection="LeftToRight" Text="" FontSize="25" />
                <Label Name="btnApply" MouseLeftButtonUp="btnApply_MouseLeftButtonUp" Style="{StaticResource FontAwesome}" FontSize="25" Cursor="Hand" Margin="0,5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="{StaticResource backgroundBrush}" Foreground="{StaticResource foregroundBrush}" Content="&#xf00c;" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="5">

            </StackPanel>
        </DockPanel>
        <Grid Grid.Column="1" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="{StaticResource backgroundBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Vertical">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="1" Margin="5,0" BorderBrush="#ccc" BorderThickness="0,0,0,1" VerticalContentAlignment="Center" Style="{StaticResource DroidKufiBold}" Content="المعلومات الشخصية" FontSize="25"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Margin="5,0" BorderBrush="#ccc" BorderThickness="0,0,0,1" VerticalContentAlignment="Center" Style="{StaticResource FontAwesome}" HorizontalContentAlignment="Center" Content="&#xf04d;" />
                            <Label Grid.Column="1" Margin="5,0" BorderBrush="#ccc" BorderThickness="0,0,0,1" VerticalContentAlignment="Center" Style="{StaticResource DroidKufiRegular}" Content="أسم المراجع" />
                            <Label Name="lblClientName" Grid.Column="2" Margin="5,0" BorderBrush="#ccc" BorderThickness="0,0,0,1" VerticalContentAlignment="Center" Style="{StaticResource DroidKufiRegular}" Content="" />
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="16*" />
                                <ColumnDefinition Width="59*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Margin="5,0" BorderBrush="#ccc" BorderThickness="0,0,0,1" VerticalContentAlignment="Center" Style="{StaticResource FontAwesome}" HorizontalContentAlignment="Center" Content="&#xf04d;" />
                            <Label Grid.Column="1" Margin="5,0" BorderBrush="#ccc" BorderThickness="0,0,0,1" VerticalContentAlignment="Center" Style="{StaticResource DroidKufiRegular}" Content="المواليد" />
                            <Label Name="lblClientBirthday" Grid.Column="2" Margin="5,0" BorderBrush="#ccc" BorderThickness="0,0,0,1" VerticalContentAlignment="Center" Style="{StaticResource DroidKufiRegular}" Content="" Grid.ColumnSpan="2" />
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Margin="5,0" BorderBrush="#ccc" BorderThickness="0,0,0,1" VerticalContentAlignment="Center" Style="{StaticResource FontAwesome}" HorizontalContentAlignment="Center" Content="&#xf04d;" />
                            <Label Grid.Column="1" Margin="5,0" BorderBrush="#ccc" BorderThickness="0,0,0,1" VerticalContentAlignment="Center" Style="{StaticResource DroidKufiRegular}" Content="الجنس" />
                            <Label Name="lblClientGender" Grid.Column="2" Margin="5,0" BorderBrush="#ccc" BorderThickness="0,0,0,1" VerticalContentAlignment="Center" Style="{StaticResource DroidKufiRegular}" Content="" />
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Margin="5,0" BorderBrush="#ccc" BorderThickness="0,0,0,1" VerticalContentAlignment="Center" Style="{StaticResource FontAwesome}" HorizontalContentAlignment="Center" Content="&#xf04d;" />
                            <Label Grid.Column="1" Margin="5,0" BorderBrush="#ccc" BorderThickness="0,0,0,1" VerticalContentAlignment="Center" Style="{StaticResource DroidKufiRegular}" Content="الهاتف" />
                            <Label Name="lblClientPhone" Grid.Column="2" Margin="5,0" BorderBrush="#ccc" BorderThickness="0,0,0,1" VerticalContentAlignment="Center" Style="{StaticResource DroidKufiRegular}" Content="" />
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Margin="5,0" BorderBrush="#ccc" BorderThickness="0,0,0,1" VerticalContentAlignment="Center" Style="{StaticResource FontAwesome}" HorizontalContentAlignment="Center" Content="&#xf04d;" />
                            <Label Grid.Column="1" Margin="5,0" BorderBrush="#ccc" BorderThickness="0,0,0,1" VerticalContentAlignment="Center" Style="{StaticResource DroidKufiRegular}" Content="العمل" />
                            <Label Name="lblClientJob" Grid.Column="2" Margin="5,0" BorderBrush="#ccc" BorderThickness="0,0,0,1" VerticalContentAlignment="Center" Style="{StaticResource DroidKufiRegular}" Content="" />
                        </Grid>
                        
                    </StackPanel>
                    <DockPanel Grid.Column="1" LastChildFill="True">
                        <Label DockPanel.Dock="Top" VerticalContentAlignment="Center" Style="{StaticResource DroidKufiBold}" FontSize="25" Content="جلسات سابقة" />
                        <ScrollViewer Grid.Column="1">
                            <StackPanel Name="lastSessions" Orientation="Vertical" Margin="5">

                            </StackPanel>
                        </ScrollViewer>
                    </DockPanel>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <DockPanel Grid.Row="0" LastChildFill="False">
                        <Label Margin="5,0" BorderBrush="#ccc" BorderThickness="0,0,0,1" VerticalContentAlignment="Center" Style="{StaticResource DroidKufiBold}" Content="القراءات الحالية" FontSize="25"/>
                        <Label Name="btnUpdate" MouseLeftButtonUp="btnUpdate_MouseLeftButtonUp" Margin="5,5" BorderBrush="#ccc" BorderThickness="0,0,0,1" Cursor="Hand" Background="{StaticResource foregroundBrush}" Foreground="{StaticResource backgroundBrush}" Padding="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Style="{StaticResource DroidKufiRegular}" Content="تحديث" FontSize="16"/>

                    </DockPanel>
                    <ScrollViewer Grid.Row="1">
                        <WrapPanel VerticalAlignment="Top">

                            <Border Width="150" Height="100" Margin="5" Padding="5" Background="White" BorderBrush="#ccc" BorderThickness="1">
                                <StackPanel Orientation="Vertical">
                                    <DockPanel LastChildFill="True" Background="{StaticResource foregroundBrush}">
                                        <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Style="{StaticResource FontAwesome}" Foreground="{StaticResource backgroundBrush}" Margin="5" Padding="5" DockPanel.Dock="Left" Content="&#xf21e;" />
                                        <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Style="{StaticResource DroidKufiRegular}" Foreground="{StaticResource backgroundBrush}" Margin="5" Padding="5" DockPanel.Dock="Left" Content="الضغط العالي" />
                                    </DockPanel>
                                    <TextBox Name="txtBloodPressureTop" FlowDirection="LeftToRight" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="18" Text=""/>
                                </StackPanel>
                            </Border>
                            <Border Width="150" Height="100" Margin="5" Padding="5" Background="White" BorderBrush="#ccc" BorderThickness="1">
                                <StackPanel Orientation="Vertical">
                                    <DockPanel LastChildFill="True" Background="{StaticResource foregroundBrush}">
                                        <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Style="{StaticResource FontAwesome}" Foreground="{StaticResource backgroundBrush}" Margin="5" Padding="5" DockPanel.Dock="Left" Content="&#xf21e;" />
                                        <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Style="{StaticResource DroidKufiRegular}" Foreground="{StaticResource backgroundBrush}" Margin="5" Padding="5" DockPanel.Dock="Left" Content="الضغط الواطي" />
                                    </DockPanel>
                                    <TextBox Name="txtBloodPressureBottom" FlowDirection="LeftToRight" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="18" Text=""/>
                                </StackPanel>
                            </Border>
                            <Border Width="150" Height="100" Margin="5" Padding="5" Background="White" BorderBrush="#ccc" BorderThickness="1">
                                <StackPanel Orientation="Vertical">
                                    <DockPanel LastChildFill="True" Background="{StaticResource foregroundBrush}">
                                        <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Style="{StaticResource FontAwesome}" Foreground="{StaticResource backgroundBrush}" Margin="5" Padding="5" DockPanel.Dock="Left" Content="&#xf21e;" />
                                        <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Style="{StaticResource DroidKufiRegular}" Foreground="{StaticResource backgroundBrush}" Margin="5" Padding="5" DockPanel.Dock="Left" Content="السكر" />
                                    </DockPanel>
                                    <TextBox Name="txtSugar" FlowDirection="LeftToRight" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="18" Text=""/>
                                </StackPanel>
                            </Border>
                            <Border Width="150" Height="100" Margin="5" Padding="5" Background="White" BorderBrush="#ccc" BorderThickness="1">
                                <StackPanel Orientation="Vertical">
                                    <DockPanel LastChildFill="True" Background="{StaticResource foregroundBrush}">
                                        <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Style="{StaticResource FontAwesome}" Foreground="{StaticResource backgroundBrush}" Margin="5" Padding="5" DockPanel.Dock="Left" Content="&#xf21e;" />
                                        <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Style="{StaticResource DroidKufiRegular}" Foreground="{StaticResource backgroundBrush}" Margin="5" Padding="5" DockPanel.Dock="Left" Content="الوزن" />
                                    </DockPanel>
                                    <TextBox Name="txtWeight" FlowDirection="LeftToRight" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="18" Text=""/>
                                </StackPanel>
                            </Border>
                            <Border Width="250" Height="200" Margin="5" Padding="5" Background="White" BorderBrush="#ccc" BorderThickness="1">
                                <DockPanel LastChildFill="True" >
                                    <DockPanel DockPanel.Dock="Top" LastChildFill="True" Background="{StaticResource foregroundBrush}">
                                        <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Style="{StaticResource FontAwesome}" Foreground="{StaticResource backgroundBrush}" Margin="5" Padding="5" DockPanel.Dock="Left" Content="&#xf21e;" />
                                        <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Style="{StaticResource DroidKufiRegular}" Foreground="{StaticResource backgroundBrush}" Margin="5" Padding="5" DockPanel.Dock="Left" Content="الملاحظة" />
                                    </DockPanel>
                                    <TextBox Name="txtNote" DockPanel.Dock="Top" TextWrapping="Wrap" AcceptsReturn="True"  VerticalContentAlignment="Top" HorizontalContentAlignment="Left" FontSize="18" Text="" />
                                </DockPanel>
                            </Border>


                        </WrapPanel>
                    </ScrollViewer>
                </Grid>

            </Grid>

        </Grid>
    </Grid>
</UserControl>
